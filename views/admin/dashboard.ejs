<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel | KL-Easy Trip</title>
    <%- include("partials/head") %>
</head>

<body class="bg-gray-100 text-gray-800">

    <!-- Navbar -->
    <%- include("partials/navbar") %>

        <!-- Admin Dashboard Header -->
        <section class="bg-green-800 text-white py-6 px-8">
            <div class="max-w-7xl mx-auto flex justify-between items-center">
                <h1 class="text-2xl font-bold">Admin Dashboard</h1>
                <button class="bg-white text-green-700 px-4 py-2 rounded shadow hover:bg-gray-100">Logout</button>
            </div>
        </section>

        <!-- Dashboard Content -->
        <section class="py-10 px-6 max-w-7xl mx-auto">
            <!-- Dashboard Stats -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                <div class="bg-white p-6 rounded shadow text-center">
                    <h2 class="text-xl font-semibold">Total Bookings</h2>
                    <p class="text-3xl font-bold mt-2">1,250</p>
                </div>
                <div class="bg-white p-6 rounded shadow text-center">
                    <h2 class="text-xl font-semibold">Active Routes</h2>
                    <p class="text-3xl font-bold mt-2">35</p>
                </div>
                <div class="bg-white p-6 rounded shadow text-center">
                    <h2 class="text-xl font-semibold">Users</h2>
                    <p class="text-3xl font-bold mt-2">890</p>
                </div>
                <div class="bg-white p-6 rounded shadow text-center">
                    <h2 class="text-xl font-semibold">Revenue</h2>
                    <p class="text-3xl font-bold mt-2">₹4.8L</p>
                </div>
            </div>


                <!-- Booking Overview -->
                <div class="bg-white p-6 rounded shadow">
                    <h3 class="text-lg font-semibold mb-4">Recent Bookings</h3>
                    <ul class="space-y-3">
                        <li class="flex justify-between border-b pb-2">
                            <span>Kochi → Trivandrum</span>
                            <span class="text-sm text-gray-600">₹350</span>
                        </li>
                        <li class="flex justify-between border-b pb-2">
                            <span>Alappuzha → Ernakulam</span>
                            <span class="text-sm text-gray-600">₹150</span>
                        </li>
                        <li class="flex justify-between">
                            <span>Kozhikode → Kochi</span>
                            <span class="text-sm text-gray-600">₹400</span>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
</body>

</html>