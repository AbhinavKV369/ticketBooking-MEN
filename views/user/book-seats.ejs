        <div class="max-w-4xl mx-auto px-6">
            <h2 class="text-3xl font-bold text-center text-green-700 mb-8">Select Your Seat</h2>

            <form class="bg-white shadow-lg p-8 rounded">
                <!-- Bus Layout -->
                <div class="grid grid-cols-5 gap-4 justify-center mb-8">
                    <div class="col-span-5 text-center text-sm text-gray-500 mb-2">Driver's Cabin (Front)</div>

                    <!-- Seats -->
