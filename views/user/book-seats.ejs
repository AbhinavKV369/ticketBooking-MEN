<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Your Seat | KL-Easy Trip</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-800">

    <!-- Navbar -->
       
        <%- include("partials/navbar") %>

    <!-- Seat Selection -->
<!-- Seat Selection -->
<div class="max-w-3xl mx-auto bg-white rounded shadow p-6 mt-10">
    <h1 class="text-2xl font-bold mb-4 text-center">Bus Seat Booking</h1>

    <!-- Legend (Explanation of seat status) -->
    <div class="flex justify-center gap-6 mb-6 text-sm">
        <div class="flex items-center gap-2">
            <div class="w-6 h-6 bg-gray-300 border rounded"></div> Available
        </div>
        <div class="flex items-center gap-2">
            <div class="w-6 h-6 bg-green-500 border rounded"></div> Selected
        </div>
        <div class="flex items-center gap-2">
            <div class="w-6 h-6 bg-red-500 border rounded"></div> Booked
        </div>
    </div>

    <!-- Driver -->
    <div class="text-left mb-2 text-gray-600 font-medium">üßë‚Äç‚úàÔ∏è Driver</div>

    <!-- Seat Form -->
    <form action="/book-seats" method="POST">
        <div id="seat-container" class="grid grid-cols-5 gap-4">
            <!-- Loop for each seat (1 to 40) -->
            <% for (let i=1; i <=40; i++) { %>
                <% const isBooked=bookedSeats.includes(i); %>
                    <label class="relative">
                        <% if (isBooked) { %>
                            <!-- This seat is booked, show a red seat -->
                            <div
                                class="w-10 h-10 flex items-center justify-center border rounded text-sm font-medium bg-red-500 text-white cursor-not-allowed opacity-70">
                                <%= i %>
                            </div>
                            <% } else { %>
                                <!-- This seat is available, show a checkbox for selection -->
                                <input type="checkbox" name="seats" value="<%= i %>" class="peer hidden" />
                                <div
                                    class="w-10 h-10 flex items-center justify-center border rounded text-sm font-medium bg-gray-300 peer-checked:bg-green-500 peer-checked:text-white cursor-pointer">
                                    <%= i %>
                                </div>
                                <% } %>
                    </label>
                    <% } %>
        </div>

        <button type="submit" class="mt-6 bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded">Book
            Now</button>
    </form>
</div>

    <!-- Footer -->
    <%- include("partials/footer") %>
</body>

</html>