                    <!-- Use input checkboxes for selection -->

                    <!-- Row 1 -->
                    <div class="flex justify-between col-span-5">
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="seats" value="A1" class="w-5 h-5 text-green-600">
                            <span>A1</span>
                        </label>
                        <label class="flex items-center space-x-2">
